def get_unique_filename(filepath):
    counter = 1
    new_filepath = filepath
    while new_filepath.exists():
        new_filename = f"{filepath.stem}_{counter}{filepath.suffix}"
        new_filepath = filepath.parent / new_filename
        counter += 1
    return new_filepath

